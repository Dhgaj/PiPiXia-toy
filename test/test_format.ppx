# 浮点数格式化测试

func main(): int {
    let pi: double = 3.14159265358979323846
    let e: double = 2.71828182845904523536
    let small: double = 0.123456789012345
    let large: double = 123456.789
    
    print("===== 浮点数格式化测试 =====")
    print("")
    
    # 默认格式（15位有效数字）
    print("1. 默认格式:")
    print("  Pi = ${pi}")
    print("  E = ${e}")
    print("  Small = ${small}")
    print("")
    
    # 自定义小数位数
    print("2. 自定义小数位数:")
    print("  Pi (2位): ${pi:.2f}")
    print("  Pi (4位): ${pi:.4f}")
    print("  Pi (10位): ${pi:.10f}")
    print("")
    
    # 科学计数法
    print("3. 科学计数法:")
    print("  Large (默认): ${large}")
    print("  Large (e格式): ${large:.2e}")
    print("  Small (e格式): ${small:.3e}")
    print("")
    
    # 有效数字控制
    print("4. 有效数字控制:")
    print("  Pi (6位有效): ${pi:.6g}")
    print("  Pi (10位有效): ${pi:.10g}")
    print("  Large (g格式): ${large:.6g}")
    print("")
    
    # 混合格式
    print("5. 混合使用:")
    let a: double = 10.5
    let b: double = 3.7
    print("  ${a:.2f} + ${b:.2f} = ${a + b:.2f}")
    print("  圆周率约为 ${pi:.2f}")
    print("")
    
    print("格式化测试完成！")
    return 0
}
